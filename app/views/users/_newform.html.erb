<%= form_for(@user) do |f| %>
    <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>

    <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: "E-mail" %>
    </div>

    <%= f.hidden_field :account_type, class: "form-control", value: "0" %>

    <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-type password" %>
    </div>

    <div class="form-group">
    <%= f.submit "Create my account", class: "btn btn-block btn-secondary" %>
    </div>
    
<% end %>
